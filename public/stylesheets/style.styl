body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color: #00B7FF

h1#ngnHeader
  color: coral;
  text-shadow: 1px 2px 1px brown;

.successMsg
  color:#408c99;
  font-size: 20px;
  font-weight: bold;


label
  font: 15px "Lucida Grande", Helvetica, Arial, sans-serif

label.labelTag
  color: #133c57
  display: block

fieldset
  position relative
  top 10px
  width 800px
  background-color #fea73b;
  border-radius 20px;

.leftCol
  display: inline
  position: relative
  left: 50px

.rightCol
  display :inline
  position: relative
  left: 450px
  bottom:41px


.submitButton
  -moz-box-shadow: 3px 4px 0px 0px #276873;
  -webkit-box-shadow: 3px 4px 0px 0px #276873;
  box-shadow: 3px 4px 0px 0px #276873;
  background:-webkit-gradient(linear, left top, left bottom, color-stop(0.05, #599bb3), color-stop(1, #408c99));
  background:-moz-linear-gradient(top, #599bb3 5%, #408c99 100%);
  background:-webkit-linear-gradient(top, #599bb3 5%, #408c99 100%);
  background:-o-linear-gradient(top, #599bb3 5%, #408c99 100%);
  background:-ms-linear-gradient(top, #599bb3 5%, #408c99 100%);
  background:linear-gradient(to bottom, #599bb3 5%, #408c99 100%);
  background-color #599bb3;
  -moz-border-radius 5px;
  -webkit-border-radius 5px;
  border-radius 5px;
  border 1px solid #29668f;
  display inline-block;
  cursor pointer;
  color #ffffff;
  font-family arial;
  font-size 17px;
  font-weight bold;
  padding 12px 44px;
  text-decoration none;
  text-shadow 0px 1px 0px #3d768a;
  position relative
  top 5px
  left 50px

.submitButton:hover
  background -webkit-gradient(linear, left top, left bottom, color-stop(0.05, #408c99), color-stop(1, #599bb3));
  background -moz-linear-gradient(top, #408c99 5%, #599bb3 100%);
  background -webkit-linear-gradient(top, #408c99 5%, #599bb3 100%);
  background -o-linear-gradient(top, #408c99 5%, #599bb3 100%);
  background -ms-linear-gradient(top, #408c99 5%, #599bb3 100%);
  background linear-gradient(to bottom, #408c99 5%, #599bb3 100%);
  background-color #408c99;

.submitButton:active
  position:relative;
  top:1px;
